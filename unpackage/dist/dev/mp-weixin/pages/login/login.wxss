.content {
  padding-top: 200rpx;
  position: relative;
  background-color: #fff;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}
.back-btn {
  position: absolute;
  left: 40rpx;
  top: 20rpx;
  font-size: 52rpx;
}
.login-wrap {
  position: relative;
}
.login-wrap .left-top-sign {
    font-size: 120rpx;
    color: #f8f8f8;
    position: relative;
    left: -16rpx;
}
.login-wrap .welcome {
    position: relative;
    left: 50rpx;
    top: -124rpx;
    color: #555;
    font-size: 46rpx;
    text-shadow: 2rpx 0 2rpx rgba(0, 0, 0, 0.3);
}
.login-wrap .input-content {
    padding: 0 60rpx;
}
.login-wrap .input-content .input-item {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-flex-direction: column;
              flex-direction: column;
      -webkit-box-pack: center;
      -webkit-justify-content: center;
              justify-content: center;
      border-radius: 8rpx;
      padding: 0 30rpx;
      background-color: #f8f6fc;
      height: 120rpx;
}
.login-wrap .input-content .input-item:last-child {
        margin-bottom: 0;
}
.login-wrap .input-content .input-item .tit {
        height: 50rpx;
        line-height: 56rpx;
        color: #606266;
        font-size: 26rpx;
}
.login-wrap .input-content .input-item input {
        height: 60rpx;
        color: #666;
        font-size: 26rpx;
}
.login-wrap .input-content .tip-item {
      height: 62rpx;
      line-height: 62rpx;
      font-size: 24rpx;
      color: #f15000;
}
.login-wrap .btn-area {
    margin-top: 70rpx;
}
.login-wrap .btn-area button {
      width: 630rpx;
      height: 76rpx;
      line-height: 76rpx;
      border-radius: 100rpx;
      background: #f96d4d;
      color: #fff;
      font-size: 16px;
}
.login-wrap .forget-section {
    font-size: 26rpx;
    text-align: center;
    margin-top: 40rpx;
    color: #4399fc;
}
.register-section {
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 50rpx;
  text-align: center;
  color: #606266;
}

