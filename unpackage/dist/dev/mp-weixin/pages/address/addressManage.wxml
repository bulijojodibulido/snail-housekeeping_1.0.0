<view class="content"><view class="row b-b"><text class="tit">联系人</text><input class="input" type="text" value="{{addressData.name}}" data-event-opts="{{[['input',[['__set_model',['$0','name','$event',[]],['addressData']]]]]}}" bindinput="__e"/></view><view class="row b-b"><text class="tit">手机号</text><input class="input" type="text" value="{{addressData.mobile}}" data-event-opts="{{[['input',[['__set_model',['$0','mobile','$event',[]],['addressData']]]]]}}" bindinput="__e"/></view><view class="row b-b"><text class="tit">地址</text><text data-event-opts="{{[['tap',[['chooseLocation',['$event']]]]]}}" class="input" bindtap="__e">{{''+addressData.addressName+''}}</text><text class="iconfont icon-map"></text></view><view class="row b-b"><text class="tit">门牌号</text><input class="input" type="text" value="{{addressData.area}}" data-event-opts="{{[['input',[['__set_model',['$0','area','$event',[]],['addressData']]]]]}}" bindinput="__e"/></view><view class="row default-row"><text class="tit">设为默认</text><switch checked="{{addressData.default}}" color="#fa436a" data-event-opts="{{[['change',[['switchChange',['$event']]]]]}}" bindchange="__e"></switch></view><button class="add-btn" type="default" data-event-opts="{{[['tap',[['confirm',['$event']]]]]}}" bindtap="__e">提交</button></view>