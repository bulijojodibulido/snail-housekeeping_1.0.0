/*用户信息部分*/
.user-container {
  height: 520rpx;
  padding: 100rpx 30rpx 0;
  position: relative;
}
.user-container .bg {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    -webkit-filter: blur(1px);
            filter: blur(1px);
    opacity: .7;
}
.user-container .user-info-section {
    height: 180rpx;
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.user-container .user-info-section .username-box {
      margin-left: 10rpx;
}
.user-container .user-info-section .username-box .username,
      .user-container .user-info-section .username-box .default {
        font-size: 40rpx;
}
.user-container .user-info-section .avatar {
      width: 130rpx;
      height: 130rpx;
      border: 4rpx solid #fff;
      border-radius: 50%;
}
.user-container .vip-card-section {
    height: 240rpx;
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
    padding: 10rpx 24rpx;
    background: -webkit-linear-gradient(left, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.8));
    background: linear-gradient(left, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.8));
    color: #f7d680;
    border-radius: 16rpx 16rpx 0 0;
}
.user-container .vip-card-section .card-bg {
      position: absolute;
      top: 20rpx;
      right: 0;
      width: 380rpx;
      height: 260rpx;
}
.user-container .vip-card-section .enroll-btn {
      width: 132rpx;
      height: 40rpx;
      position: absolute;
      right: 20rpx;
      top: 16rpx;
      text-align: center;
      line-height: 40rpx;
      font-size: 22rpx;
      color: #36343c;
      border-radius: 20px;
      background: -webkit-linear-gradient(left, #f9e6af, #ffd465);
      background: linear-gradient(left, #f9e6af, #ffd465);
}
.user-container .vip-card-section .tit {
      color: #f7d680;
      font-size: 30rpx;
      margin-bottom: 28rpx;
}
.user-container .vip-card-section .tit .iconfont {
        color: #f6e5a3;
        margin-right: 16rpx;
}
.user-container .vip-card-section .union-name {
      font-size: 36rpx;
      line-height: 20px;
}
.user-container .vip-card-section .desc {
      color: #d8cba9;
      margin-top: 10rpx;
      font-size: 24rpx;
}
/*中下详情部分*/
.cover-container {
  background: #f8f8f8;
  margin-top: -150rpx;
  padding: 0 30rpx;
  position: relative;
  background: #f5f5f5;
  padding-bottom: 20rpx;
}
.cover-container .arc {
    width: 100%;
    height: 36rpx;
    position: absolute;
    left: 0;
    top: -34rpx;
}
.cover-container .integral-section .list-item {
    height: 140rpx;
    font-size: 24rpx;
    color: #75787d;
}
.cover-container .integral-section .list-item .num {
      font-size: 32rpx;
      color: #303133;
}
.cover-container .order-section {
    padding: 28rpx 0;
    margin-top: 20rpx;
}
.cover-container .order-section .list-item {
      font-size: 24rpx;
      width: 120rpx;
      height: 120rpx;
      border-radius: 10rpx;
      color: #303133;
}
.cover-container .order-section .list-item .iconfont {
        font-size: 48rpx;
        display: inline-block;
        height: 76rpx;
        color: #f96d4d;
}
.cover-container .extra-section {
    padding: 15px 0 0;
    margin-top: 10px;
    background: #fff;
    border-radius: 5px;
}

